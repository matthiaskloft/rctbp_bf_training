# RCTBP BayesFlow Training - Development Dockerfile
# With hot-reload support for local development

FROM python:3.11-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    KERAS_BACKEND=torch \
    PORT=8000 \
    HOST=0.0.0.0

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Install PyTorch CPU-only
RUN pip install torch --index-url https://download.pytorch.org/whl/cpu

# Copy and install dependencies
COPY requirements.txt requirements-api.txt* ./
RUN pip install -r requirements.txt
RUN pip install fastapi uvicorn[standard] pydantic>=2.0 watchfiles

# Copy application code
COPY src/ ./src/
COPY api/ ./api/
COPY pyproject.toml ./

# Install package in development mode
RUN pip install -e .

# Create models directory
RUN mkdir -p /models

# Expose port
EXPOSE 8000

# Run with hot-reload enabled
CMD ["python", "-m", "uvicorn", "api.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload", "--reload-dir", "/app/src", "--reload-dir", "/app/api"]
